<nav class="navbar navbar-dark bg-dark sticky-top">
  <style>
    /* Responsive tweaks for navbar */
    @media (max-width: 768px) {
      .navbar-brand {
        font-size: 1.1rem;
        white-space: nowrap;
      }

      .navbar-brand img {
        height: 32px !important;
        margin-right: 6px !important;
      }

      /* Profile circle smaller on mobile */
      #profileDropdown {
        width: 32px !important;
        height: 32px !important;
        font-weight: 600;
        font-size: 1rem;
      }

      /* Cart icon and badge adjustments */
      a.position-relative.me-3.text-white {
        margin-right: 12px !important;
      }

      #cart-count {
        font-size: 0.7rem !important;
        padding: 0.15em 0.4em !important;
      }

      /* Collapse menu items vertical and spaced */
      .navbar-nav.flex-column.flex-grow-1 {
        padding-left: 0;
      }

      .navbar-nav.flex-column.flex-grow-1 > li {
        margin-bottom: 0.5rem;
      }

      .navbar-nav.flex-column.flex-grow-1 > li > a.nav-link {
        font-size: 1rem;
        padding-left: 0;
      }
    }
  </style>

  <div class="container-fluid px-3 d-flex justify-content-between align-items-center">

    <!-- Hamburger toggle button -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Brand / logo -->
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/images/logo.png" alt="NovaRise" style="height: 40px; margin-right: 10px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.5);" />
      NovaRise
    </a>

    <!-- Cart Icon and Profile Icon container -->
    <div class="d-flex align-items-center">
      <!-- Cart Icon with badge -->
      <a href="/cart" class="position-relative me-3 text-white">
        <i class="bi bi-cart-fill fs-4"></i>
        <% 
          let totalQuantity = 0;
          if (cart && cart.length > 0) {
            totalQuantity = cart.reduce((sum, item) => sum + item.quantity, 0);
          }
        %>
        <span id="cart-count" 
              class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
              style="<%= totalQuantity > 0 ? '' : 'display:none;' %>">
          <%= totalQuantity %>
        </span>
      </a>

      <% if (user) { %>
        <!-- Profile dropdown -->
        <div class="dropdown">
          <a href="#" class="text-white rounded-circle bg-secondary d-flex align-items-center justify-content-center" 
             id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" 
             style="width: 38px; height: 38px; font-weight: 600; cursor: pointer; user-select: none;">
            <%= user.name.charAt(0).toUpperCase() %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown" style="min-width: 220px;">
            <li class="dropdown-item-text">
              <strong><%= user.name %></strong><br/>
              <small><%= user.email %></small>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" href="/dashboard">Go to Dashboard</a></li>
            <li><a class="dropdown-item" href="/auth/logout">Log out</a></li>
          </ul>
        </div>
      <% } %>
    </div>

    <!-- Collapsible menu -->
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav flex-column flex-grow-1">
        <% if (!user) { %>
          <li class="nav-item"><a class="nav-link" href="/auth/login">Log in</a></li>
        <% } %>
        <li class="nav-item"><a class="nav-link" href="/section1">Guide to Freedom</a></li>
        <li class="nav-item"><a class="nav-link" href="/section2">Mental Strength and Health</a></li>
        <li class="nav-item"><a class="nav-link" href="/section3">Physical Health</a></li>
        <li class="nav-item"><a class="nav-link" href="/section4">Recommended Products</a></li>
        <li class="nav-item"><a class="nav-link" href="/section5">Affiliate Program</a></li>
        <li class="nav-item"><a class="nav-link" href="/marketplace">Marketplace</a></li>
        <li class="nav-item"><a class="nav-link" href="/section6">Our story</a></li>
        <li class="nav-item"><a class="nav-link" href="/terms">Terms and Conditions</a></li>
      </ul>
    </div>

  </div>
</nav>
