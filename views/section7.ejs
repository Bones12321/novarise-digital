<%- include('partials/header', { title: 'Marketplace', user: user, cart: cart }) %>

<style>
  body {
    font-family: 'Outfit', sans-serif;
    margin: 0;
    padding: 0;
    background: url('/images/logo.png') no-repeat center center fixed;
    background-size: cover;
    color: #fff;
  }

  h1 {
    text-align: center;
    margin: 60px 0 20px;
    font-size: 2.8rem;
    font-weight: 700;
    text-shadow: 0 2px 6px rgba(0,0,0,0.5);
  }

  /* Glass effect container for description */
  .description-box {
    max-width: 700px;
    margin: 0 auto 40px;
    padding: 25px 30px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    color: #111;
    font-size: 1.1rem;
    font-weight: 500;
    text-align: center;
  }

  .products-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .product-box {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    text-align: center;
    color: #111;
    cursor: pointer;
  }
  .product-box:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.25);
  }

  .product-box img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 15px;
  }

  .product-box h2 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: #111;
  }

  .product-box p {
    font-size: 1rem;
    margin-bottom: 15px;
    color: #111; /* darker text */
    background-color: rgba(255, 255, 255, 0.7); /* white transparent box */
    padding: 5px 12px;
    border-radius: 12px;
    display: inline-block;
    text-shadow: none;
  }

  .product-box button {
    padding: 10px 20px;
    font-size: 1rem;
    border: none;
    border-radius: 25px;
    background-color: #222;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .product-box button:hover {
    background-color: #444;
  }

  .quote {
    text-align: center;
    margin: 60px auto 40px;
    font-size: 1.5rem;
    font-style: italic;
    font-weight: bold;
    color: #fff;
    text-shadow: 0 2px 5px rgba(0,0,0,0.7);
  }

  footer {
    text-align: center;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.8);
    color: #ccc;
    margin-top: 40px;
    font-size: 0.9rem;
  }
</style>

<main>
  <h1>Marketplace</h1>

  <div class="description-box">
    <%= description %>
  </div>

  <div class="products-container">
    <% 
      // Combine real products with some fake ones for display 
      const fakeProducts = [
        { title: 'Productivity Power Pack', price: 29.99, image: '/images/product5.jpg' },
        { title: 'Mindset Masterclass', price: 39.99, image: '/images/product6.jpg' },
        { title: 'Financial Freedom Blueprint', price: 49.99, image: '/images/product7.jpg' },
        { title: 'Stress Relief Audio Series', price: 19.99, image: '/images/product8.jpg' },
      ];
      const allProducts = [...products, ...fakeProducts];
      allProducts.forEach((product, index) => { 
    %>
      <div class="product-box">
        <img src="<%= product.image || '/images/default-product.jpg' %>" alt="<%= product.title %>" />
        <h2><%= product.title %></h2>
        <p>$<%= product.price.toFixed(2) %></p>
        <button class="add-to-cart-btn" 
                data-id="<%= index %>" 
                data-name="<%= product.title %>" 
                data-price="<%= product.price %>">
          Add to Basket
        </button>
      </div>
    <% }); %>
  </div>

  <p class="quote">
    "Empower yourself with digital tools designed for success." â€“ NovaRise
  </p>
</main>

<!-- Footer -->
<%- include('partials/footer') %>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Handle Add to Basket clicks with AJAX
  document.querySelectorAll('.add-to-cart-btn').forEach(button => {
    button.addEventListener('click', async () => {
      const id = button.dataset.id;
      const name = button.dataset.name;
      const price = button.dataset.price;

      try {
        const response = await fetch('/cart/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id, name, price })
        });

        if (response.ok) {
          const data = await response.json();
          alert(`Added "${name}" to basket!`);

          // Update cart badge in navbar
          const badge = document.querySelector('nav .badge');
          if (badge) {
            if (data.cartCount > 0) {
              badge.textContent = data.cartCount;
              badge.style.display = 'inline-block';
            } else {
              badge.style.display = 'none';
            }
          }
        } else {
          alert('Failed to add to basket. Please try again.');
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
        alert('An error occurred. Please try again later.');
      }
    });
  });
</script>
