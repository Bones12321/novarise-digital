<%- include('partials/header', { title: title }) %>

<style>
  body {
    font-family: 'Outfit', sans-serif;
    margin: 0;
    padding: 0;
    background: url('/images/logo.png') no-repeat center center fixed;
    background-size: cover;
    color: #222;
  }

  main {
    max-width: 900px;
    margin: 40px auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);
  }

  h1 {
    text-align: center;
    font-weight: 900;
    font-size: 2.8rem;
    margin-bottom: 30px;
    color: #111;
  }

  table.cart-table {
    width: 100%;
    border-collapse: collapse;
  }

  table.cart-table thead {
    background-color: #222;
    color: white;
  }

  table.cart-table th,
  table.cart-table td {
    padding: 15px 20px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  table.cart-table tbody tr:last-child td {
    border-bottom: none;
  }

  .cart-empty {
    text-align: center;
    font-size: 1.3rem;
    padding: 50px 0;
    color: #666;
  }

  form.remove-item-form {
    margin: 0;
  }

  button.remove-btn {
    background-color: #e74c3c;
    border: none;
    color: white;
    padding: 8px 16px;
    border-radius: 25px;
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  button.remove-btn:hover {
    background-color: #c0392b;
  }

  .cart-total {
    margin-top: 30px;
    text-align: right;
    font-size: 1.4rem;
    font-weight: 700;
    color: #222;
  }

  .checkout-btn {
    display: block;
    margin-left: auto;
    margin-top: 20px;
    padding: 12px 30px;
    background-color: #222;
    color: white;
    font-weight: 700;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    text-align: center;
    width: max-content;
  }

  .checkout-btn:hover {
    background-color: #444;
    text-decoration: none;
    color: white;
  }
</style>

<main>
  <h1>Your Cart</h1>

  <% if (cart.length === 0) { %>
    <div class="cart-empty">
      Your cart is empty. <a href="/" style="color:#222; font-weight:600;">Continue shopping &rarr;</a>
    </div>
  <% } else { %>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <% let subtotal = item.price * item.quantity; %>
          <% total += subtotal; %>
          <tr>
            <td><%= item.name %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td><%= item.quantity %></td>
            <td>$<%= subtotal.toFixed(2) %></td>
            <td>
              <form action="/cart/remove" method="POST" class="remove-item-form">
                <input type="hidden" name="id" value="<%= item.id %>">
                <button type="submit" class="remove-btn">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="cart-total">
      Total: $<%= total.toFixed(2) %>
    </div>

    <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
  <% } %>
</main>

