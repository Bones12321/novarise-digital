<%- include('partials/header', { title: title }) %>

<style>
  body {
    font-family: 'Outfit', sans-serif;
    margin: 0;
    padding: 0;
    background: url('/images/logo.png') no-repeat center center fixed;
    background-size: cover;
    color: #222;
  }

  main {
    max-width: 900px;
    margin: 40px auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.1);

    overflow-x: auto; /* Allow horizontal scroll on small screens */
    box-sizing: border-box;
  }

  h1 {
    text-align: center;
    font-weight: 900;
    font-size: 2.8rem;
    margin-bottom: 30px;
    color: #111;
  }

  table.cart-table {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed; /* Fix columns to avoid overflow */
    word-wrap: break-word;
  }

  table.cart-table thead {
    background-color: #222;
    color: white;
  }

  table.cart-table th,
  table.cart-table td {
    padding: 15px 20px;
    text-align: left;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
  }

  table.cart-table tbody tr:last-child td {
    border-bottom: none;
  }

  .cart-empty {
    text-align: center;
    font-size: 1.3rem;
    padding: 50px 0;
    color: #666;
  }

  form.remove-item-form {
    margin: 0;
  }

  button.remove-btn {
    background-color: #e74c3c;
    border: none;
    color: white;
    padding: 6px 10px; /* Reduced padding for fit */
    border-radius: 20px; /* Slightly smaller radius */
    cursor: pointer;
    font-weight: 600;
    transition: background-color 0.3s ease;
    max-width: 100%; /* prevent overflow */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: inline-block;
  }

  button.remove-btn:hover {
    background-color: #c0392b;
  }

  .cart-total {
    margin-top: 30px;
    text-align: right;
    font-size: 1.4rem;
    font-weight: 700;
    color: #222;
  }

  .checkout-btn {
    display: block;
    margin-left: auto;
    margin-top: 20px;
    padding: 12px 30px;
    background-color: #222;
    color: white;
    font-weight: 700;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    text-align: center;
    width: max-content;
  }

  .checkout-btn:hover {
    background-color: #444;
    text-decoration: none;
    color: white;
  }

  /* MOBILE ADJUSTMENTS */
  @media (max-width: 768px) {
    main {
      margin: 20px 10px;
      padding: 15px 10px;
      max-width: 100%;
    }

    /* Make all text inside main smaller on mobile */
    main, main * {
      font-size: 0.85rem !important;
    }

    h1 {
      font-size: 1.6rem !important;
      margin-bottom: 15px !important;
    }

    table.cart-table th,
    table.cart-table td {
      padding: 6px 8px !important;
    }

    table.cart-table thead {
      font-size: 0.9rem !important;
    }

    .cart-empty {
      font-size: 0.9rem !important;
      padding: 25px 10px !important;
    }

    button.remove-btn {
      padding: 6px 10px !important; /* Keep original padding */
      font-size: inherit !important; /* Keep button font size unchanged */
      border-radius: 16px !important;
    }
    /* Smaller font size for the "Remove" text inside the button */
    button.remove-btn span {
      font-size: 0.6rem !important;
    }

    .cart-total {
      font-size: 1rem !important;
      margin-top: 15px !important;
    }

    .checkout-btn {
      padding: 8px 16px !important;
      font-size: 0.9rem !important;
      width: 100% !important;
      text-align: center !important;
      margin-top: 10px !important;
      border-radius: 18px !important;
    }
  }
</style>

<main>
  <h1>Your Cart</h1>

  <% if (cart.length === 0) { %>
    <div class="cart-empty">
      Your cart is empty. <a href="/" style="color:#222; font-weight:600;">Continue shopping &rarr;</a>
    </div>
  <% } else { %>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          <th>Remove</th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0; %>
        <% cart.forEach(item => { %>
          <% let subtotal = item.price * item.quantity; %>
          <% total += subtotal; %>
          <tr>
            <td><%= item.name %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td><%= item.quantity %></td>
            <td>$<%= subtotal.toFixed(2) %></td>
            <td>
              <form action="/cart/remove" method="POST" class="remove-item-form">
                <input type="hidden" name="id" value="<%= item.id %>">
                <button type="submit" class="remove-btn"><span>Remove</span></button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="cart-total">
      Total: $<%= total.toFixed(2) %>
    </div>

    <a href="/checkout" class="checkout-btn">Proceed to Checkout</a>
  <% } %>
</main>

<!-- Footer -->
<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
