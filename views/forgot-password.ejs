<h1>Forgot Password</h1>
<form method="POST">
  <input type="email" name="email" placeholder="Your email" required />
  <button type="submit">Send Reset Link</button>
</form>
<% if (message) { %><p style="color:green"><%= message %></p><% } %>
<% if (error) { %><p style="color:red"><%= error %></p><% } %>
