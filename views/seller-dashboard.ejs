<%- include('partials/header', { title: 'Seller Dashboard', user: user, cart: cart }) %>

<style>
  :root{
    --sidebar-w: 260px;
  }
  body {
    background: url('/images/logo.png') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Outfit', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol';
    color: #fff;
  }
  .admin-shell{
    display: grid;
    grid-template-columns: var(--sidebar-w) 1fr;
    min-height: calc(100vh - 56px);
    background: rgba(0,0,0,0.55);
    backdrop-filter: blur(6px);
  }
  .admin-sidebar{
    position: sticky;
    top: 56px;
    height: calc(100vh - 56px);
    background: rgba(15,15,15,0.9);
    border-right: 1px solid rgba(255,255,255,0.08);
    padding: 18px 14px;
    overflow-y: auto;
  }
  .admin-brand{
    font-weight: 800;
    font-size: 1.1rem;
    letter-spacing: .5px;
    margin: 2px 6px 14px;
    opacity: .9;
  }
  .admin-nav .nav-link{
    color: #eaeaea;
    border-radius: 10px;
    padding: 10px 12px;
    margin-bottom: 6px;
    display: flex;
    align-items: center;
    gap: 10px;
    background: transparent;
    transition: background .2s, transform .06s;
    white-space: nowrap;
  }
  .admin-nav .nav-link.active,
  .admin-nav .nav-link:hover{
    background: rgba(255,255,255,0.08);
    color: #fff;
    text-decoration: none;
  }
  .admin-nav .badge{
    margin-left: auto;
  }
  .admin-content{
    padding: 24px;
  }
  .glass{
    background: rgba(255,255,255,0.08);
    border: 1px solid rgba(255,255,255,0.14);
    box-shadow: 0 10px 30px rgba(0,0,0,0.25);
    border-radius: 16px;
    backdrop-filter: blur(8px);
  }
  .section{ display: none; }
  .section.active{ display: block; }
  .stat-card{ padding: 16px; border-radius: 14px; }
  .stat-value{ font-size: 1.6rem; font-weight: 800; }
  .stat-label{ font-size: .9rem; opacity: .85; }
  .table.glass-table{ color: #f2f2f2; }
  .table.glass-table th{ background: rgba(255,255,255,0.08); border-bottom: 1px solid rgba(255,255,255,0.2); }
  .table.glass-table td{ background: rgba(255,255,255,0.04); border-color: rgba(255,255,255,0.08); vertical-align: middle; }
  .form-control, .form-select{ background: rgba(255,255,255,0.12) !important; border: 1px solid rgba(255,255,255,0.18) !important; color: #fff !important; }
  .form-control::placeholder{ color: rgba(255,255,255,0.7) !important; }
  .form-text{ color: rgba(255,255,255,0.8); }
  .btn-dark{ background:#222; border-color:#222; }
  .content-topbar{ display: none; }
  @media (max-width: 768px){
    .admin-shell{ grid-template-columns: 1fr; }
    .admin-sidebar{
      position: fixed;
      top: 56px;
      left: 0;
      width: 86vw;
      max-width: 320px;
      transform: translateX(-105%);
      transition: transform .25s ease;
      z-index: 1050;
      border-right: 1px solid rgba(255,255,255,0.15);
      border-top-right-radius: 14px;
      border-bottom-right-radius: 14px;
    }
    .admin-sidebar.open{ transform: translateX(0); }
    .content-topbar{ display: flex; align-items: center; justify-content: space-between; margin-bottom: 14px; }
    .content-topbar .brand-mini{ font-weight: 800; opacity: .9; font-size: 1.05rem; }
    .admin-content, .admin-content *{ font-size: .95rem; }
    h1.h3{ font-size: 1.25rem; }
    .stat-value{ font-size: 1.35rem; }
    .btn{ padding: .45rem .7rem; font-size: .95rem; }
    .table{ font-size: .92rem; }
    .table-responsive{ -webkit-overflow-scrolling: touch; }
  }
</style>

<div class="admin-shell">
  <!-- SIDEBAR -->
  <aside class="admin-sidebar glass" id="adminSidebar" aria-label="Seller menu">
    <div class="admin-brand">Seller â€¢ NovaRise</div>
    <nav class="admin-nav nav flex-column">
      <a href="#overview" class="nav-link active" data-section="overview"><i class="bi bi-speedometer2"></i> Overview</a>
      <a href="#my-products" class="nav-link" data-section="my-products"><i class="bi bi-bag-fill"></i> My Products</a>
      <a href="#orders" class="nav-link" data-section="orders"><i class="bi bi-cart-check-fill"></i> Orders</a>
      <a href="#payouts" class="nav-link" data-section="payouts"><i class="bi bi-cash-coin"></i> Payouts</a>
      <a href="#uploads" class="nav-link" data-section="uploads"><i class="bi bi-cloud-arrow-up-fill"></i> Upload Product</a>
      <a href="#settings" class="nav-link" data-section="settings"><i class="bi bi-gear-fill"></i> Settings</a>
    </nav>
  </aside>

  <!-- CONTENT -->
  <main class="admin-content">

    <!-- Mobile topbar -->
    <div class="content-topbar">
      <button class="btn btn-outline-light" id="sidebarToggle" aria-controls="adminSidebar" aria-expanded="false"><i class="bi bi-list"></i></button>
      <div class="brand-mini">Seller Dashboard</div>
      <a href="/auth/logout" class="btn btn-dark">Logout</a>
    </div>

    <!-- Overview -->
    <section id="overview" class="section active">
      <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Overview</h1>
        <a href="/auth/logout" class="btn btn-dark d-none d-md-inline-flex">Logout</a>
      </div>
      <div class="row g-3">
        <div class="col-6 col-md-3">
          <div class="glass stat-card h-100">
            <div class="stat-value">
              $<%= (stats && stats.totalRevenue) ? stats.totalRevenue.toLocaleString() : '0' %>
            </div>
            <div class="stat-label">Total Revenue</div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="glass stat-card h-100">
            <div class="stat-value"><%= (stats && stats.orders) ? stats.orders : 0 %></div>
            <div class="stat-label">Orders</div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="glass stat-card h-100">
            <div class="stat-value"><%= (stats && stats.totalProducts) ? stats.totalProducts : 0 %></div>
            <div class="stat-label">Products</div>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="glass stat-card h-100">
            <div class="stat-value"><%= (stats && stats.pendingProducts) ? stats.pendingProducts : 0 %></div>
            <div class="stat-label">Pending Approvals</div>
          </div>
        </div>
      </div>
    </section>

    <!-- My Products -->
    <section id="my-products" class="section">
      <h1 class="h3 mb-3">My Products</h1>
      <div class="glass p-3">
        <div class="table-responsive">
          <table class="table glass-table align-middle">
            <thead>
              <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Price</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% (myProducts || []).forEach(p => { %>
                <tr>
                  <td><img src="<%= p.image || '/images/default-product.jpg' %>" alt="" style="width:64px; height:48px; object-fit:cover; border-radius:8px;"></td>
                  <td><%= p.title %></td>
                  <td>$<%= p.price.toFixed(2) %></td>
                  <td><span class="badge <%= p.status==='Approved'?'bg-success':'bg-warning text-dark' %>"><%= p.status %></span></td>
                  <td class="text-end">
                    <button class="btn btn-sm btn-outline-light" data-bs-toggle="collapse" data-bs-target="#edit_<%= p.id %>">Edit</button>
                    <form action="/seller/products/<%= p.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this product?');">
                      <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
                <tr class="collapse" id="edit_<%= p.id %>">
                  <td colspan="5">
                    <form action="/seller/products/<%= p.id %>/update" method="POST" enctype="multipart/form-data" class="row g-2">
                      <div class="col-12 col-md-4">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" value="<%= p.title %>" required>
                      </div>
                      <div class="col-6 col-md-2">
                        <label class="form-label">Price ($)</label>
                        <input type="number" step="0.01" min="0" name="price" class="form-control" value="<%= p.price %>" required>
                      </div>
                      <div class="col-12 col-md-4">
                        <label class="form-label">Replace Cover</label>
                        <input type="file" name="image" class="form-control" accept="image/*">
                        <div class="form-text">Leave empty to keep current</div>
                      </div>
                      <div class="col-12 col-md-2 d-flex align-items-end">
                        <button class="btn btn-success w-100">Save</button>
                      </div>
                    </form>
                  </td>
                </tr>
              <% }) %>
              <% if (!myProducts || myProducts.length === 0) { %>
                <tr><td colspan="5" class="text-center text-white-50">No products yet.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Orders -->
    <section id="orders" class="section">
      <h1 class="h3 mb-3">Orders</h1>
      <div class="glass p-3">
        <div class="table-responsive">
          <table class="table glass-table">
            <thead>
              <tr>
                <th>Order #</th>
                <th>Buyer</th>
                <th>Product</th>
                <th>Total</th>
                <th>Status</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% (orders || []).forEach(o => { %>
                <tr>
                  <td>#<%= o.id %></td>
                  <td><%= o.buyer %></td>
                  <td><%= o.productTitle %></td>
                  <td>$<%= o.total.toFixed(2) %></td>
                  <td><span class="badge <%= o.status==='Paid'?'bg-success':'bg-secondary' %>"><%= o.status %></span></td>
                  <td><%= o.date %></td>
                </tr>
              <% }) %>
              <% if (!orders || orders.length === 0) { %>
                <tr><td colspan="6" class="text-center text-white-50">No orders yet.</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Payouts -->
    <section id="payouts" class="section">
      <h1 class="h3 mb-3">Payouts</h1>
      <div class="glass p-3">
        <div class="table-responsive">
          <table class="table glass-table">
            <thead>
              <tr>
                <th>Type</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Requested</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% (payouts || []).forEach(p => { %>
                <tr>
                  <td><%= p.type %></td>
                  <td>$<%= p.amount.toFixed(2) %></td>
                  <td><span class="badge <%= p.status==='Paid'?'bg-success':'bg-warning text-dark' %>"><%= p.status %></span></td>
                  <td><%= p.requestedAt %></td>
                  <td class="text-end">
                    <% if (p.status !== 'Paid') { %>
                      <form action="/seller/payouts/<%= p.id %>/mark-paid" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-success">Mark Paid</button>
                      </form>
                    <% } %>
                    <form action="/seller/payouts/<%= p.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Delete this payout record?');">
                      <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Settings -->
    <section id="settings" class="section">
      <h1 class="h3 mb-3">Settings</h1>
      <div class="glass p-3">
        <form action="/seller/settings/save" method="POST" class="row g-2">
          <div class="col-12 col-md-6">
            <label class="form-label">Storefront Status</label>
            <select name="store_status" class="form-select">
              <option value="open" <%= (settings?.store_status==='open'?'selected':'') %>>Open</option>
              <option value="maintenance" <%= (settings?.store_status==='maintenance'?'selected':'') %>>Maintenance</option>
              <option value="closed" <%= (settings?.store_status==='closed'?'selected':'') %>>Closed</option>
            </select>
          </div>
          <div class="col-12 col-md-6">
            <label class="form-label">Default Affiliate %</label>
            <input type="number" name="affiliate_pct" step="0.1" min="0" max="100" class="form-control" value="<%= settings?.affiliate_pct ?? 20 %>">
          </div>
          <div class="col-12">
            <label class="form-label">Seller Note</label>
            <textarea name="seller_note" rows="3" class="form-control" placeholder="Shown only in dashboardâ€¦"><%= settings?.seller_note || '' %></textarea>
          </div>
          <div class="col-12 text-end">
            <button class="btn btn-success">Save Settings</button>
          </div>
        </form>
      </div>
    </section>

  </main>
</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
  const sidebar = document.getElementById('adminSidebar');
  const toggleBtn = document.getElementById('sidebarToggle');
  if (toggleBtn) {
    toggleBtn.addEventListener('click', () => {
      const open = sidebar.classList.toggle('open');
      toggleBtn.setAttribute('aria-expanded', open ? 'true' : 'false');
    });
  }
  document.addEventListener('click', (e) => {
    if (window.matchMedia('(max-width: 768px)').matches) {
      if (!sidebar.contains(e.target) && !toggleBtn?.contains(e.target)) {
        sidebar.classList.remove('open');
        toggleBtn?.setAttribute('aria-expanded', 'false');
      }
    }
  });

  const links = document.querySelectorAll('.admin-nav .nav-link');
  const sections = document.querySelectorAll('.section');
  function showSection(id){
    sections.forEach(s => s.classList.toggle('active', s.id === id));
    links.forEach(l => l.classList.toggle('active', l.dataset.section === id));
    if (window.matchMedia('(max-width: 768px)').matches) {
      sidebar.classList.remove('open');
      toggleBtn?.setAttribute('aria-expanded', 'false');
    }
    try { localStorage.setItem('seller:lastTab', id); } catch(e){}
  }
  links.forEach(l => {
    l.addEventListener('click', (e) => {
      e.preventDefault();
      showSection(l.dataset.section);
    });
  });
  (function(){
    try {
      const last = localStorage.getItem('seller:lastTab');
      if (last && document.getElementById(last)) showSection(last);
    } catch(e){}
  })();
</script>
